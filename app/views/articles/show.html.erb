
<div class="row">
	<div class="col-sm-8">
			<div class="card">
				<div class="card-block">
					<h4 class="card-title"><strong>Title:</strong>
          <p><%= @article.title %>
        </p></h4>
					<p class="card-text"><strong>Body:</strong>
          <p class="card-text"><%= @markdown.render(@article.body).html_safe %></p>
			  </div>
			 <div class="card-footer">
         <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-warning' %> 
         <%= link_to 'Back', articles_path, class:'btn btn-primary' %>
			 </div>
	   </div>
  </div>
</div>
